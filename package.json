{
  "name": "ts-library",
  "version": "0.1.1",
  "main": "dist/index.js",
  "module": "dist/index.m.js",
  "scripts": {
    "start": "npm run test",
    "build":
      "rm -rf ./build/ && rm -rf ./dist/ && tsc && microbundle build/main.js",
    "test": "jest --watch --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ts-bps/ts-library"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^22.1.3",
    "comment-json": "^1.1.3",
    "jest": "^22.3.0",
    "microbundle": "^0.4.3",
    "parcel-bundler": "^1.6.1",
    "typescript": "^2.7.2"
  },
  "jest": {
    "moduleFileExtensions": ["ts", "tsx", "js"],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/preprocessor.js"
    },
    "testMatch": ["**/__tests__/*.(ts|tsx|js)"]
  }
}
